<%- include('../partials/head') %>

    <body class="bg-gray-50">
        <%- include('../partials/header') %>

            <main class="flex flex-col items-center justify-center py-10 px-4">
                <div class="max-w-5xl bg-white rounded-lg shadow-lg shadow-red-200 overflow-hidden">

                    <!-- Image Section -->
                    <div class="relative w-full h-80">
                        <img src="<%= home.profile %>" alt="<%= home.name %> image" class="object-cover w-full h-full">
                        <div class="absolute bottom-0 left-0 bg-gradient-to-t from-black/60 to-transparent w-full p-4">
                            <h1 class="text-white text-3xl font-semibold">
                                <%= home.name %>
                            </h1>
                        </div>
                    </div>

                    <!-- Details Section -->
                    <div class="p-6 grid grid-cols-1 md:grid-cols-2 gap-6">

                        <!-- Left side (text info) -->
                        <div class="flex flex-col gap-4">
                            <p class="text-gray-700 text-lg">
                                <span class="font-semibold text-red-500">Address:</span>
                                <span class="ml-1">
                                    <%= home.address %>
                                </span>
                            </p>

                            <p class="text-gray-700 text-lg">
                                <span class="font-semibold text-red-500">Price / Night:</span>
                                <span class="ml-1">Rs <%= home.price %></span>
                            </p>

                            <p class="flex items-center text-gray-700 text-lg">
                                <span class="font-semibold text-red-500 mr-2">Rating:</span>
                                <span class="text-yellow-500 font-medium">
                                    <%= home.rating %> ‚≠ê
                                </span>
                            </p>
                        </div>

                        <!-- Right side (description + favorite) -->
                        <div class="flex flex-col gap-3">
                            <h2 class="text-red-500 text-xl font-semibold">Description</h2>
                            <p class="text-gray-600 leading-relaxed">
                                <%= home.description || "No description provided." %>
                            </p>

                            <div class="mt-4">
                                <%- include('../partials/favourite') %>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
    </body>

    </html>