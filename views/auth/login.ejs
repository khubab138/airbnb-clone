<%- include('../partials/head') %>

    <body class=" min-h-screen flex flex-col">
        <%- include('../partials/header') %>

            <main class="flex flex-col items-center justify-center flex-1 p-6">
                <div
                    class="bg-white/90 backdrop-blur-md shadow-2xl shadow-red-200 border border-red-100 rounded-2xl text-center p-10 max-w-md w-full ">

                    <h2 class="text-3xl font-extrabold text-red-600 mb-6 tracking-wide">
                        Login Here
                    </h2>
                    <p class="text-gray-500 mb-6 text-center">Please log in to continue.</p>


                    <% if (errors?.length> 0) { %>
                        <div class="bg-red-100 border border-red-400 text-red-700 px-4 rounded relative mb-4">

                            <ul class="list-disc list-inside space-y-1">
                                <% errors.forEach(err=> { %>
                                    <li>
                                        <%= err %>
                                    </li>
                                    <% }) %>
                            </ul>
                        </div>
                        <% } %>


                            <form class="flex flex-col items-stretch text-left space-y-5" action="/login" method="POST">
                                <input required type="email" name="email" placeholder="Enter your Email"
                                    value="<%= oldInput.email || '' %>"
                                    class="w-full px-4 py-2 border border-red-200 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none focus:border-transparent transition-all placeholder-gray-400" />

                                <input required type="password" name="password" placeholder="Enter your Password"
                                    class="w-full px-4 py-2 border border-red-200 rounded-lg focus:ring-2 focus:ring-red-400 focus:outline-none focus:border-transparent transition-all placeholder-gray-400" />



                                <div class="text-center mt-6">
                                    <button type="submit"
                                        class="bg-gradient-to-r from-red-400 to-red-500 text-white font-semibold px-6 py-2 rounded-lg shadow-md hover:from-red-500 hover:to-red-600 hover:shadow-lg transition-all duration-200 ease-in-out">
                                        Login
                                    </button>
                                </div>
                            </form>
                </div>
            </main>
    </body>

    </html>