<header class="shadow-md backdrop-blur-md bg-gradient-to-r from-red-400 to-red-500 text-white">
    <nav class="w-full px-8 py-3 flex items-center justify-between max-w-7xl mx-auto">
        <!-- Logo -->
        <a href="/" class="text-3xl font-bold tracking-wide text-white hover:text-red-100 transition-all">
            airbnb
        </a>

        <!-- Navigation Links -->
        <% if (isLoggedIn) { %>
            <% if (user && user.userType==="guest" ) { %>
                <div class="hidden md:flex items-center space-x-4">
                    <a href="/home" class="px-3 py-1 rounded-lg hover:bg-white/20 transition-all text-white">Home</a>
                    <a href="/booking"
                        class="px-3 py-1 rounded-lg hover:bg-white/20 transition-all text-white ">Bookings</a>
                    <a href="/favourite"
                        class="px-3 py-1 rounded-lg hover:bg-white/20 transition-all text-white">Favourites</a>
                    <%} else {%>
                        <a href="/host/add-home" class="px-3 py-1 rounded-lg hover:bg-white/20 transition-all">Add
                            Home</a>
                        <a href="/host/host-home-list"
                            class="px-3 py-1 rounded-lg hover:bg-white/20 transition-all">Host
                            Homes</a>
                        <%}%>
                </div>
                <% } %>

                    <!-- Auth Buttons -->
                    <% if (!isLoggedIn) { %>
                        <div class="flex items-center space-x-3">
                            <a href="/login"
                                class="font-semibold text-red-500 bg-white px-4 py-1.5 rounded-lg border-2 border-transparent hover:bg-red-100 hover:border-white transition-all duration-200">
                                Login
                            </a>
                            <a href="/signup"
                                class="font-semibold text-white bg-transparent border-2 border-white px-4 py-1.5 rounded-lg hover:bg-white hover:text-red-500 transition-all duration-200">
                                Sign Up
                            </a>
                        </div>
                        <% } else { %>
                            <form action="/logout" method="POST" class="flex items-center">
                                <button type="submit"
                                    class="font-semibold bg-white text-red-500 px-4 py-1.5 rounded-lg hover:bg-red-100 transition-all duration-200">
                                    Logout
                                </button>
                            </form>
                            <% } %>

                                <!-- Mobile Menu Button (Optional) -->
                                <button id="menu-btn"
                                    class="md:hidden flex flex-col justify-center items-center space-y-1 focus:outline-none">
                                    <span class="block w-6 h-0.5 bg-white"></span>
                                    <span class="block w-6 h-0.5 bg-white"></span>
                                    <span class="block w-6 h-0.5 bg-white"></span>
                                </button>
    </nav>

    <!-- Mobile Dropdown (Optional) -->
    <div id="mobile-menu" class="md:hidden hidden bg-white text-red-600 shadow-md">
        <% if (isLoggedIn) { %>
            <a href="/home" class="block px-5 py-2 hover:bg-red-100">Home</a>
            <a href="/booking" class="block px-5 py-2 hover:bg-red-100">Bookings</a>
            <a href="/favourite" class="block px-5 py-2 hover:bg-red-100">Favourites</a>
            <a href="/host/add-home" class="block px-5 py-2 hover:bg-red-100">Add Home</a>
            <a href="/host/host-home-list" class="block px-5 py-2 hover:bg-red-100">Host Homes</a>
            <form action="/logout" method="POST" class="border-t border-red-200">
                <button type="submit" class="w-full text-left px-5 py-2 hover:bg-red-100">Logout</button>
            </form>
            <% } else { %>
                <a href="/login" class="block px-5 py-2 hover:bg-red-100">Login</a>
                <a href="/signup" class="block px-5 py-2 hover:bg-red-100">Sign Up</a>
                <% } %>
    </div>
</header>